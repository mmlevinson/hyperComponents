---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro'
import Searchbox from '../components/search/searchbox.astro'
import PalletGrid from '../components/PalletGrid.astro'
import ClickDropdownMenu_A from '../components/ClickDropdownMenu_A.astro'
import { defaultBackgroundColors } from '../components/search/searchbox.astro'

const pageTitle = 'Test Search'

const defaultSpeechTitle = 'Click on the any of the famous orations listed above.'
const defaultSpeechTranscript = 'The full transcript will be displayed here. Use the Search box to dynamnically highlight any part of the transcript'
import {tw as rowStyles} from './api/speeches'
const tw = {
	table:'mx-auto my-4 max-w-max ',
	...rowStyles,
  search:{
		container: 'not-content pt-8 ' +  
		'flex justify-between items-center gap-2',
		colorPallet: 'colorPallet bg-indigo-600 border-2 border-gray-600 dark:bg-gray-700 size-12',
		palletIcon: 'inline-block size-6' ,
		resetButton: 'cursor-pointer px-4 py-3 dark:bg-indigo-600' + 
		' text-zinc-200 text-lg rounded-2xl'
	},
	speech:{
		wrapper: 'w-full relative top-16 mx-auto max-h-[50rem] overflow-y-auto ' +  'dark:bg-gray-950 rounded-t-lg',
		title: 'text-center text-balance text-indigo-600 ' + 'dark:text-amber-100/80 p-4 border-b-2 border-gray-300 ' + ' dark:border-gray-700',
		transcript: 'not-content mt-8 p-4'
	},
}	
const hs = {
	resetButton:`
		on load or click 
			put the "${defaultSpeechTitle}" into the #{'speech-title'} then
			put the "${defaultSpeechTranscript}" into the #{'speech-transcript'} then 
			send reset to the <table#all-speeches/> 
			send reset to the #{'searchbox'}
		end `,
	colorPallet: `
		on click 
			set originalHilightColor to beep! @data-hilight-color of #{'search-wrapper'}
			remove .{originalHilightColor} from #{'search-wrapper'}
			set newBackground to beep! my @bgColor
			-- add .dark:bg-red-900 to .search-wrapper  -- Works
			-- add .{'dark:bg-red-900'} to .search-wrapper -- Works
		  -- add .{dark:bg-violet-800} to .search-wrapper -- Not working
			-- add .{'dark:' + my @bgColor} to .search-wrapper  -- Not working
			-- appears to work fine if we ignore dark mode and just make the switch with a bg-color only
			add .{newBackground} to #{'search-wrapper'} -- working for non-dark: variants
			set the value of #{'hilight-color'} to beep! newBackground
			set the @data-hilight-color of #{'search-wrapper'} to newBackground
			
		`,

	table: `
		on reset
			remove .${tw.rowHilight} from <tr/>
		end `
}

---

<StarlightPage frontmatter={{title: pageTitle}}>

{/* Intro */}
<div class="w-10/12 mx-auto">
	<h3 class="text-center">Famous Speeches in the English Language</h3>
	<h4 class="pt-8 pb-4 text-center">Highlight Words from Orations that Helped Shape our World.</h4>
</div>

{/*  Table of Famous Speeches */}
<table class={tw.table}
				id="all-speeches"
				hx-trigger="load"  
				hx-get="/api/speeches/"
				hx-target="<tbody/>"
				hx-swap="innerHTML"
				script={hs.table}>
	<thead>
		<tr><th>Speaker</th><th>Title</th><th>Date</th></tr>
	</thead>
	<tbody></tbody>
</table>
 
{/*  Search Box */}
<div class={tw.search.container}>
	<Searchbox 
		id="searchbox" 
		searchPath="/api/speeches/match/" 
		target="#speech-transcript" 
		swapStrategy="innerHTML"
		 />
	
	<ClickDropdownMenu_A 
		 id='click-activated-pallet' 
		 moveXY='-200,18'
		 buttonStyles={tw.search.colorPallet} 
		 duration='180ms'>
	 <img slot="leftIcon" src='/images/tailwind_icon.svg' alt='tailwind icon' class={tw.search.palletIcon}/>
	 <PalletGrid orientation='vertical' hs={hs.colorPallet}/>
 </ClickDropdownMenu_A>	 
		 
	<button class={tw.search.resetButton}
	script={hs.resetButton}
	>Reset</button>
</div>

{/* Our Speech */}
<div class={tw.speech.wrapper}>
	<h4 id="speech-title" class={tw.speech.title}></h4>
	<div id="speech-transcript" class={tw.speech.transcript}>
	</div>
</div>
	



</StarlightPage>
