---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro'
import { twMerge } from 'tailwind-merge'
const title = 'TestTabs'

const tw = {
	tabs: 'not-content flex justify-left gap-1 ',
	tabItem: 'not-content bg-blue-900 rounded-t-xl cursor-pointer  border-2 border-slate-600',
	output: 'block -translate-y-1 p-4 w-full h-[35rem] overflow-y-scroll ' +
	  ' bg-gray-900 border-2 border-slate-600 ',
	active: 'bg-blue-900'
}

const hs = `on htmx:afterSwap log 'afterSwap'`
---

<StarlightPage frontmatter={{title: title}}>

	<div class={tw.tabs}
			hx-trigger="click"
			hx-target="next <output/>"
			hx-swap="innerHTML">
			<button class={tw.tabItem}
			  hx-trigger="load, click"
				hx-get="/api/readmore/1"
			>HTMX</button>
			<button class={tw.tabItem}	
				hx-get="/api/readmore/2"
			>Tailwind	</button>
			<button class={tw.tabItem}
				hx-get="/api/readmore/3">Hyperscript</button>
			<button class={tw.tabItem}
				hx-get="/api/readmore/4">Astro</button>
	</div>
	<output id="tab-output" class={tw.output} script={hs} style="margin-top:0; transition:all 300ms ease-in-out;"/>


</StarlightPage>

