---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro'
import TabGroup from '../components/tabs/TabGroup.astro'
import TabItem from '../components/tabs/TabItem.astro'

import { twMerge } from 'tailwind-merge'
const title = 'TestTabs'

const tabBackgroundDark = 'bg-gray-700'
const tabBackgroundLight = 'bg-slate-300'
const tabBackgroundActiveLight = 'bg-green-500'
const tabBackgroundActiveDark = 'bg-indigo-300'

const tw = {
	tabs: 'not-content flex justify-left gap-1 ',
	tabItem: 'tab-item not-content rounded-t-xl cursor-pointer border-2 border-slate-600 ' + 
	  'bg-slate-300 dark:bg-gray-700',
	output: 'block -translate-y-1 p-4 w-full h-[35rem] overflow-y-scroll ' +
	  'bg-slate-100 dark:bg-gray-900 border-2 border-slate-600 ',
}

const defaultTabId = '1'


---

<StarlightPage frontmatter={{title: title}}>




	<TabGroup>
		<TabItem id="0" caption="Hypermedia" path="/api/readmore/0" trigger="load, click" />
		<TabItem id="1" caption="HTMX" path="/api/readmore/1" />
		<TabItem id="2" caption="Tailwind" path="/api/readmore/2" />
		<TabItem id="3" caption="Hyperscript" path="/api/readmore/3" />
		<TabItem id="4" caption="Astro" path="/api/readmore/4" />
	</TabGroup>


</StarlightPage>

