---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro'
import TabGroup from '../components/tabs/TabGroup.astro'
import TabItem from '../components/tabs/TabItem.astro'


const title = 'TestTabs'

---

<StarlightPage frontmatter={{title: title}}>

	<TabGroup defaultTabId="1">
		<TabItem id="0" caption="Hypermedia" path="/api/readmore/0" trigger="load, click" />
		<TabItem id="1" caption="HTMX" path="/api/readmore/1" />
		<TabItem id="2" caption="Tailwind" path="/api/readmore/2" />
		<TabItem id="3" caption="Hyperscript" path="/api/readmore/3" />
		<TabItem id="4" caption="Astro" path="/api/readmore/4" />
	</TabGroup>


</StarlightPage>

