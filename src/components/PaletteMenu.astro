---
interface Props {
 id:string   //a unique identifier for this component, allowing multiple dropdowns on a page without collisions
 moveOver?:string //comma separated integer values specifying top,left shift in dropdown location
}

import PaletteItem from './PaletteItem.astro';
import DropdownMenu from './DropdownMenu.astro';

const {id, moveOver} = Astro.props

const tw = {
	palleteWrapper: 'mt-0 flex flex-col gap-y-2',
	paletteItem: 'size-3 rounded-sm overflow-hidden ring-1 ring-slate-600 hover:scale-125',

}

const hs = "on click log ('You selected ' + my @title) "
---

<DropdownMenu id={id} moveOver={moveOver} buttonStyles="dark:bg-slate-900" duration="300ms">
	<img slot="startIcon" src='/images/tailwind_icon.svg' alt='tailwind icon' class="size-5"/>
  <div class="grid align-items-start gap-2 px-4" style="grid-template-columns: repeat(4, 1fr);">
    <div class={tw.palleteWrapper} >
			<PaletteItem twColor='bg-slate-50' hexCode='f8fafc' />
