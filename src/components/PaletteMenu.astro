			<PaletteItem twColor='bg-slate-400' hexCode='94a3b8' />
			<PaletteItem twColor='bg-slate-500' hexCode='64748b' />
			<PaletteItem twColor='bg-slate-600' hexCode='475569' />
			<PaletteItem twColor='bg-slate-700' hexCode='334155' />
			<PaletteItem twColor='bg-slate-800' hexCode='1e293b' />
			<PaletteItem twColor='bg-slate-900' hexCode='0f172a' />
			<PaletteItem twColor='bg-slate-950' hexCode='020617' />
		</div>
		<div class={tw.palleteWrapper} style="margin-top:0;">
			<PaletteItem twColor='bg-gray-50' hexCode='#f9fafb' />
