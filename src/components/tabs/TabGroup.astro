---
import {twMerge} from 'tailwind-merge'
 
interface Props {
	id:string
}
 
const {
 id 
} = Astro.props 
 
export const tw = {
	container: 'tab-group not-content flex justify-left gap-1 ',
	output: 'block -translate-y-1 p-4 w-full h-[35rem] overflow-y-scroll ' +
	  'bg-slate-100 dark:bg-gray-900 border-2 border-slate-600 ',
	activeLight: 'bg-orange-300',
	activeDark: 'dark:bg-sky-400',
	inactiveLight: 'bg-slate-300',
	inactiveDark: 'dark:bg-gray-900',
}

// export const activeLight = 'bg-orange-300'
// export const inactiveLight = 'bg-slate-300'
// export const activeDark = 'dark:bg-sky-400'
// export const inactiveDark = 'dark:bg-gray-900'



const hs = 
`
on activateTab(tab)
	remove .${tw.inactiveLight} .${tw.inactiveDark} from tab
	add .${tw.activeLight} .${tw.activeDark} to tab
	send deactivateSiblings(activeTab:tab) to me
end 

on deactivateSiblings(activeTab)
 set allTabs to my children
 for tab in allTabs
   if tab is not the activeTab
		remove .${tw.activeLight} .${tw.activeDark} from tab
		add .${tw.inactiveLight} .${tw.inactiveDark} to tab
   end
end

`
 
---
 
<div class={tw.container}
	hx-trigger="click"
	hx-target="next <output/>"
	hx-swap="innerHTML transition:true"
	script={hs}>
  <slot/>
</div>
<output class={tw.output} style="margin-top:0;"/>

