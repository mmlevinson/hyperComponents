---

import {twMerge} from 'tailwind-merge'

interface Props {
	id: string
	caption: string
	path: string
	trigger?: string
}

const { 
	id, 
	caption, 
	path,
  trigger = 'click' 
} = Astro.props

import {inactiveLight, inactiveDark} from './TabGroup.astro'

const tw = {
	tabItem: 'tab-item not-content rounded-t-xl cursor-pointer border-2 border-slate-600 '
}

const hs = `
  init 
    add .${inactiveLight} .${inactiveDark} to me
	end
  
  on click send activateTab(tab:me) to the  closest <div.tab-group/>
`


---

<button id={id} 
	class={tw.tabItem}
	hx-trigger={trigger}
	hx-get={`${path}`}
	script={hs}>
	{caption}
</button>
	 
